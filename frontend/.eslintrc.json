{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:testing-library/react"
  ],
  "plugins": [
    "testing-library"
  ],
  "rules": {
    "testing-library/no-unnecessary-act": "error",
    "testing-library/no-wait-for-multiple-assertions": "error"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    }
  ]
} 